@model IEnumerable<AptEMS.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
<link href="~/Content/shifts.css" rel="stylesheet" />
<h2>Add Employee </h2>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/shifts.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

@if (TempData["SuccessMessage"] != null)
{
    <div class="overlay"></div> <!-- Background overlay for blur effect -->
    <div class="alert alert-success custom-alert">
        @TempData["SuccessMessage"]
    </div>
}



<div class="container mt-5">
    <div class="bg-light rounded p-4">


        <p style="text-align:right;padding-right:70px">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary my-custom-button" })
        </p>

        <div class="table-responsive">
            <!-- Makes the table responsive -->
            <table id="datatable" class="table table-striped table-bordered table table-hover">
                <!-- Added Bootstrap classes -->
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>Full Name</th>
                        <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        @*<th>@Html.DisplayNameFor(model => model.PostalZipCode)</th>*@
                        <th>@Html.DisplayNameFor(model => model.PersonalEmailID)</th>
                        @*<th>@Html.DisplayNameFor(model => model.OfficeEmailID)</th>*@
                        <th>@Html.DisplayNameFor(model => model.DOB)</th>
                        <th>@Html.DisplayNameFor(model => model.DOJ)</th>
                        <th>@Html.DisplayNameFor(model => model.Designation)</th>
                        <th>@Html.DisplayNameFor(model => model.Empphoto)</th>
                        <th>@Html.DisplayNameFor(model => model.PANno)</th>
                        <th>@Html.DisplayNameFor(model => model.PANphoto)</th>
                        <th>@Html.DisplayNameFor(model => model.Aadharno)</th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Aadharphoto)*@

                            Aadhar photo

                        </th>



                        <th>@Html.DisplayNameFor(model => model.BankName)</th>
                        <th>@Html.DisplayNameFor(model => model.BankAccountNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.BankIFSCCode)</th>
                        <th>@Html.DisplayNameFor(model => model.Branch)</th>
                        <th>@Html.DisplayNameFor(model => model.CurrentAddress)</th>
                        <th>@Html.DisplayNameFor(model => model.PermanentAddress)</th>
                        <th>@Html.DisplayNameFor(model => model.City)</th>
                        <th>@Html.DisplayNameFor(model => model.State)</th>
                        <th>@Html.DisplayNameFor(model => model.isactive)</th>
                        @*<th>@Html.DisplayNameFor(model => model.Country)</th>*@
                        <th>@Html.DisplayNameFor(model => model.Summary)</th>
                        <th> Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            @*<td>@Html.DisplayFor(modelItem => item.PostalZipCode)</td>*@
                            <td>@Html.DisplayFor(modelItem => item.PersonalEmailID)</td>
                            @*<td>@Html.DisplayFor(modelItem => item.OfficeEmailID)</td>*@
                            <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                            <td>@Html.DisplayFor(modelItem => item.DOJ)</td>
                            <td>@Html.DisplayFor(modelItem => item.Designation)</td>

         
                            <td>
                                @if (!string.IsNullOrEmpty(item.Empphoto))
                                {
                                    <a href="@Url.Content(item.Empphoto)" target="_blank">
                                        <i class="fa fa-eye" style="font-size: 24px; color: black;"> </i>View Employee Photo
                                    </a>
                                }
                                else
                                {
                                    <span>No Photo</span>
                                }
                            </td>




                            <td>@Html.DisplayFor(modelItem => item.PANno)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.PANphoto))
                                {
                                    <a href="@Url.Content(item.PANphoto)" target="_blank"> <i class="fa fa-eye" style="font-size: 24px; color: black;"> </i>View PAN Card</a>
                                }
                                else
                                {
                                    <span>No Photo</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Aadharno)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Aadharphoto))
                                {
                                    <a href="@Url.Content(item.Aadharphoto)" target="_blank"> <i class="fa fa-eye" style="font-size: 24px; color: black;"> </i>View Aadhar Card</a>
                                }
                                else
                                {
                                    <span>No Photo</span>
                                }
                            </td>



                            <td>@Html.DisplayFor(modelItem => item.BankName)</td>
                            <td>@Html.DisplayFor(modelItem => item.BankAccountNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.BankIFSCCode)</td>

                            <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                            <td>@Html.DisplayFor(modelItem => item.CurrentAddress)</td>
                            <td>@Html.DisplayFor(modelItem => item.PermanentAddress)</td>
                            <td>@Html.DisplayFor(modelItem => item.City)</td>
                            <td>@Html.DisplayFor(modelItem => item.State)</td>
                            <td>@Html.DisplayFor(modelItem => item.isactive)</td>

                            @*<td>@Html.DisplayFor(modelItem => item.Country)</td>*@

                            <td>@Html.DisplayFor(modelItem => item.Summary)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-edit btn-sm" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // Check if success message exists
        if ($(".custom-alert").length > 0) {
            // Show the success message
            $(".custom-alert").fadeIn();

            // Show the overlay to blur the background
            $(".overlay").fadeIn();

            // Hide the message and overlay after 1 second
            setTimeout(function () {
                $(".custom-alert").fadeOut();
                $(".overlay").fadeOut();
            }, 1800); // 1000ms = 1 second
        }

        $("#datatable").DataTable({
            // Custom options for DataTable
            paging: true,
            searching: true,
            ordering: true,
            lengthMenu: [5, 10, 25, 50, 100],
            pageLength: 10,
            language: {
                search: "Custom Search:",  // Customize search label
                lengthMenu: "Display _MENU_ records per page",
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                infoEmpty: "No entries to show",
                zeroRecords: "No matching records found"
            }
        });

    });
</script>
<style>
    /* Center the success message */
    .custom-alert {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 250px; /* Adjusted width */
        height: 250px; /* Adjusted height */
        padding: 20px; /* Padding inside the box */
        font-size: 18px; /* Increased font size */
        text-align: center;
        display: flex; /* Use flexbox to center the content */
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        display: none; /* Initially hide the alert */
        z-index: 9999; /* Ensure it's on top */
        background-color: #28a745; /* Green background for success */
        color: white; /* White text */
        border-radius: 10px; /* Rounded corners */
    }

    /* Overlay to blur background */
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        filter: blur(5px);
        z-index: 9998; /* Just below the alert */
        display: none; /* Initially hide the overlay */
    }
</style>


