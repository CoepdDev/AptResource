@model IEnumerable<AptEMS.Models.ContactFormModel>

@{
    ViewBag.Title = "Admin Contact Forms";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h2>Contact Form Submissions</h2>

<div class="table-responsive">
    <table id="datatable" class="table table-bordered table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Full Name</th>
                <th>Company Name</th>
                <th>Email Address</th>
                <th>Phone Number</th>
                <th>Designation</th>
                <th>Hiring Interest</th>
                <th>Requirement</th>
                <th>Submitted On</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var form in Model)
                {
                    <tr>
                        <td>@form.FullName</td>
                        <td>@form.CompanyName</td>
                        <td>@form.EmailAddress</td>
                        <td>@form.PhoneNumber</td>
                        <td>@form.Designation</td>
                        <td>@form.HiringInterest</td>
                        <td>@form.Requirement</td>
                        <td>@form.CreatedAt.ToString("g")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No contact form submissions available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $("#datatable").DataTable({
            paging: true,
            searching: true,
            ordering: true, // Enables sorting by columns
            lengthMenu: [5, 10, 25, 50, 100],  // Options for number of records per page
            pageLength: 10,  // Default number of records per page
            language: {
                search: "Search:",  // Customize search label
                lengthMenu: "Display _MENU_ records per page",  // Customize page length label
                info: "Showing _START_ to _END_ of _TOTAL_ entries",  // Info text
                infoEmpty: "No entries to show",  // If no records are found
                zeroRecords: "No matching records found"  // If no matching records
            }
        });
    });
</script>