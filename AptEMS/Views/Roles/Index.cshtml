@model IEnumerable<AptEMS.Models.Role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
<link href="~/Content/shifts.css" rel="stylesheet" />

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/shifts.css" rel="stylesheet" />

<h2>Roles</h2>


<div class="container mt-5">
    <div class="bg-light rounded p-4" >
       


        <p style="text-align:right;padding-right:70px">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary my-custom-button" })
        </p>

        <div class="table-responsive">
            <!-- Makes the table responsive -->
            <table id="datatable" class="table table-striped table-bordered">
                <!-- Added Bootstrap classes -->
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Role1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th> Action </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-edit btn-sm" }) |
                                @*@Html.ActionLink("Details", "Details", new { id = item.ID }) |*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
 $(document).ready(function () {

     $("#datatable").DataTable({
         // Custom options for DataTable
         paging: true,
         searching: true,
         ordering: true,
         lengthMenu: [5, 10, 25, 50, 100],
         pageLength: 10,
         language: {
             search: "Custom Search:",  // Customize search label
             lengthMenu: "Display _MENU_ records per page",
             info: "Showing _START_ to _END_ of _TOTAL_ entries",
             infoEmpty: "No entries to show",
             zeroRecords: "No matching records found"
         }
     });

        });


</script>



