@model IEnumerable<AptEMS.Models.Incentives>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h2> Incentivies </h2>
<br />
<hr />

<link href="~/Content/shifts.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />






<div class="container mt-5">
    <div class="bg-light rounded p-4">
        <p style="text-align:right">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary my-custom-button" })
        </p>
        <div class="table-responsive">
            <!-- Makes the table responsive -->
            <table class="table table-striped table-bordered">

                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Empid)</th>
                        <th> @Html.DisplayNameFor(model => model.FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.Designation)</th>
                        <th>@Html.DisplayNameFor(model => model.IncentiveType)</th>
                        <th>@Html.DisplayNameFor(model => model.Amount)</th>
                        <th>@Html.DisplayNameFor(model => model.DateAwared)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>@Html.DisplayNameFor(model => model.PaymentDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Manager)</th>
                        <th>@Html.DisplayNameFor(model => model.Approval)</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Empid)</td>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                            <td>@Html.DisplayFor(modelItem => item.IncentiveType) </td>
                            <td>@Html.DisplayFor(modelItem => item.Amount) </td>
                            <td>@Html.DisplayFor(modelItem => item.DateAwared)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>@Html.DisplayFor(modelItem => item.PaymentDate) </td>
                            <td>@Html.DisplayFor(modelItem => item.Manager)</td>
                            <td>@Html.DisplayFor(modelItem => item.Approval)</td>
                            <td>
                              
                                @Html.ActionLink("Edit", "Edit", new { id = item.Empid }, new { @class = "btn btn-success btn-sm" })
                                |
                                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */  id = item.Empid }) |*@
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */  id = item.Empid }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>