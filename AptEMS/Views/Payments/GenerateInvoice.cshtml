@{
    ViewBag.Title = "Generate Invoice";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

@model AptEMS.Models.PaymentDetailsViewModel

<div class="container mt-5">
    <h2 class="mb-4">Invoice for Payment</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Details</th>
                <th>Information</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Client Name</strong></td>
                <td>@Model.ClientName</td>
            </tr>
            @*<tr>
                <td><strong>Email Address</strong></td>
                <td>@Model.EmailAddress</td>
            </tr>*@
            <tr>
                <td><strong>Company Name</strong></td>
                <td>@Model.CompanyName</td>
            </tr>
            @*<tr>
                <td><strong>Contact Number</strong></td>
                <td>@Model.ContactNumber</td>
            </tr>*@
            <tr>
                <td><strong>Payment Method</strong></td>
                <td>@Model.PaymentMethod</td>
            </tr>
            <tr>
                <td><strong>Fee Amount</strong></td>
                <td>₹@Model.FeeAmount</td>
            </tr>
            <tr>
                <td><strong>Amount Paid</strong></td>
                <td>₹@Model.AmountPaid</td>
            </tr>
            <tr>
                <td><strong>Payment Status</strong></td>
                <td>@Model.PaymentStatus</td>
            </tr>
            <tr>
                <td><strong>Payment Date</strong></td>
                <td>@Model.PaymentDoneDate</td>
            </tr>
        </tbody>
    </table>

    <!-- Option to print the invoice -->
    <div class="mt-3">
        <button type="button" class="btn btn-primary" onclick="window.print();">Print Invoice</button>
        <a href="@Url.Action("Index", "ClientAgreement")" class="btn btn-danger sign-out-btn" title="Back To List">Back To List</a>
     
    </div>
</div>
