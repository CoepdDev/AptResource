@model IEnumerable<AptEMS.Models.SalaryTranscation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="overlay"></div> <!-- Background overlay for blur effect -->
    <div class="alert alert-success custom-alert">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Salary Transaction</h2>




<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/shifts.css" rel="stylesheet" />




<div class="container mt-5">
    <div class="bg-light rounded p-4">


        <p style="text-align:right;padding-right:70px">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary my-custom-button" })
        </p>

        <div class="table-responsive">
            <!-- Makes the table responsive -->
            <table id="datatable" class="table table-striped table-bordered table table-hover">
                <!-- Added Bootstrap classes -->
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Empid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BankAccountNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BankName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Leaves)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LOP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LoanAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WorkingDays)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Netsalary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApprisialPoints)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WarnigPoints)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DelayPoints)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Bonus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Allowances)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TransactionDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SourceBank)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreditedBy)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Empid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BankAccountNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BankName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Leaves)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LOP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoanAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkingDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Netsalary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApprisialPoints)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WarnigPoints)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DelayPoints)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bonus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Allowances)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransactionDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SourceBank)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreditedBy)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Empid }, new { @class = "btn btn-edit btn-sm" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Empid }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // Check if success message exists
        if ($(".custom-alert").length > 0) {
            // Show the success message
            $(".custom-alert").fadeIn();

            // Show the overlay to blur the background
            $(".overlay").fadeIn();

            // Hide the message and overlay after 1 second
            setTimeout(function () {
                $(".custom-alert").fadeOut();
                $(".overlay").fadeOut();
            }, 1800); // 1000ms = 1 second
        }

        $("#datatable").DataTable({
            // Custom options for DataTable
            paging: true,
            searching: true,
            ordering: true,
            lengthMenu: [5, 10, 25, 50, 100],
            pageLength: 10,
            language: {
                search: "Custom Search:",  // Customize search label
                lengthMenu: "Display _MENU_ records per page",
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                infoEmpty: "No entries to show",
                zeroRecords: "No matching records found"
            }
        });

    });
</script>
<style>
    /* Center the success message */
    .custom-alert {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 250px; /* Adjusted width */
        height: 250px; /* Adjusted height */
        padding: 20px; /* Padding inside the box */
        font-size: 18px; /* Increased font size */
        text-align: center;
        display: flex; /* Use flexbox to center the content */
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        display: none; /* Initially hide the alert */
        z-index: 9999; /* Ensure it's on top */
        background-color: #28a745; /* Green background for success */
        color: white; /* White text */
        border-radius: 10px; /* Rounded corners */
    }

    /* Overlay to blur background */
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        filter: blur(5px);
        z-index: 9998; /* Just below the alert */
        display: none; /* Initially hide the overlay */
    }
</style>
