@model IEnumerable<AptEMS.Models.UserAccount>
@{
    ViewBag.Title = "Userdetails";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h2>Userdetails</h2>

<div class="table-responsive">
    <table id="datatable" class="table table-bordered table-striped candidate-table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Mobile Number</th>
                <th>Created on</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in Model)
            {
                <tr>
                    <td>@candidate.UserAccountId</td>
                    <td>@candidate.FullName</td>
                    <td>@candidate.Email</td>
                    <td>@candidate.Password</td>
                    <td>@candidate.PhoneNumber</td>
                    <td>@candidate.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <form action="@Url.Action("DeleteUserdetails", "Account")" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@candidate.UserAccountId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this candidate?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
