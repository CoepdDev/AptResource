    <style>

        /* Universal Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            overflow-x: hidden;
        }

        /* Global font and alignment settings */
        body, p, a, li, h3, .footer-section h3 {
            font-weight: normal;
            text-align: left;
        }

        /* Container to center and align content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header styling */
        header {
            background-color: white;
            padding: 15px 0px;
            position: relative;
            z-index: 9999;
            width: 100%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 100%;
            padding-right: 50px;
        }

            nav img {
                height: 120px;
            }

        .nav-links {
            display: none; /* Hidden by default for mobile view */
            gap: 15px;
            margin-left: auto;
        }

            .nav-links a {
                color: black;
                text-decoration: none;
                font-size: 20px;
                padding: 8px 16px;
                transition: color 0.3s;
                font-weight: bold;
            }

                .nav-links a:hover {
                    background-color: #234067;
                    border-radius: 15px;
                    color: white;
                }

        .toggler {
            display: none;
            font-size: 1.5rem;
            color: white;
            cursor: pointer;
        }

        @@media (min-width: 768px) {
            .nav-links {
                display: flex;
            }

                .nav-links a {
                    font-size: 22px;
                }
        }

        @@media (max-width: 767px) {
            .toggler {
                display: block;
            }
        }


        /* Footer styles */
        .footer {
            content: "";
            display: table;
            clear: both;
            height: 500px;
            color: #fff;
            background-color: #003247;
            text-align: center;
            width: 100%;
            /*            font-family: Trebuchet MS;*/
        }

        /* Footer columns */
        .footer-column {
            display: inline-block;
            vertical-align: top;
            width: 26%;
            text-align: left;
            margin-bottom: 0px;
            padding: 0 0px;
            margin-left: 1px;
            margin-right: 1px;
        }

        .footer-IMG {
            display: inline-block;
            vertical-align: top;
            width: 10%;
            text-align: left;
            margin-bottom: 0px;
            padding: 0 0px;
            margin-left: 0px;
        }

            .footer-IMG img {
                width: 100%;
                height: 100%;
                border-radius: 10px;
            }

        .footer-column h3 {
            margin-top: 10px;
            margin-bottom: 10px;
            color: #00ff00;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            /*                font-family: Trebuchet MS;*/
        }

        .footer-column p {
            font-size: 20px;
            margin-bottom: 0px;
            /*                font-family: Trebuchet MS;*/
        }

        .footer-column ul {
            list-style-type: none;
            padding: 0;
        }

            .footer-column ul li {
                margin-bottom: 5px;
                border-bottom: 1px solid #fff;
                width: 40%;
                font-size: 20px;
            }

                .footer-column ul li:last-child {
                    border-bottom: none;
                }

                .footer-column ul li a {
                    color: #fff;
                    text-decoration: none;
                }

        .footer-hr {
            border: 0;
            border-top: 1px solid #ccc;
            margin-top: 5px;
            padding: 0;
            margin-left: 60px;
            margin-right: 90px;
        }

        .footer-disclaimer {
            margin-top: 10px;
            font-size: 13px;
            font-family: Trebuchet MS;
        }

        .footer-column h2 i {
            margin-right: 10px;
        }





        .icon-container12 {
            display: flex;
            justify-content: center;
            gap: 10px; /* Space between icons */
            margin-top: 20px;
        }

        .icon12 {
            max-width: 30px; /* Maximum width of the icons */
            max-height: 30px; /* Maximum height of the icons */
            width: auto; /* Maintain aspect ratio */
            height: auto; /* Maintain aspect ratio */
        }

        .cpContent {
            min-height: 400px; /* Ensure the section maintains a minimum height */
            padding: 20px; /* Add padding to maintain spacing */
            background-color: #f8f8f8; /* Background color to make it visually distinct */
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        /* Toggler button styling */
        .toggler {
            display: none; /* Hidden by default */
            background: none;
            border: none;
            color: black;
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Show the toggler button on smaller screens */
        @@media (max-width: 767px) {
            .toggler {
                display: block;
            }

            .nav-links {
                display: none; /* Hidden initially */
                flex-direction: column;
                background-color: #2b3e50;
                position: absolute;
                top: 100px;
                right: 0;
                width: 100%;
                text-align: center;
                padding: 10px 0;
            }

                .nav-links.show {
                    display: flex; /* Show when toggler is clicked */
                }

                .nav-links a {
                    color: white;
                    padding: 10px;
                }
        }

        /* Ensure images do not overflow */
        img {
            max-width: 100%;
            height: auto;
        }
    </style>
