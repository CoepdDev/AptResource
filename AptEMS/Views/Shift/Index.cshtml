@model IEnumerable<AptEMS.Models.shift>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
<link href="~/Content/shifts.css" rel="stylesheet" />

<h1 style="text-align:center"> Shifts</h1>

<hr />




<div class="container mt-5">
    <div class="bg-light rounded p-4">


        <p style="text-align:right;padding-right:70px">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary my-custom-button" })
        </p>

        <div class="table-responsive">
            <!-- Makes the table responsive -->
            <table id="datatable" class="table table-striped table-bordered">
                <!-- Added Bootstrap classes -->
                <thead>
                    <tr>
                        <th>
                            Shift ID
                            @*@Html.DisplayNameFor(model => model.sno)*@
                        </th>
                        <th>
                            Shift Name
                            @*@Html.DisplayNameFor(model => model.shiftname)*@
                        </th>
                        <th>
                            Created On
                            @*@Html.DisplayNameFor(model => model.created)*@
                        </th>
                        <th>        Action </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.sno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.shiftname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.created)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.sno }, new { @class = "btn btn-edit" }) |
                                @*@Html.ActionLink("Details", "Details", new { id = item.sno }) |*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.sno }, new { @class = "btn btn-delete" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
 $(document).ready(function () {

        $("#datatable").DataTable({
            // Custom options for DataTable
            paging: true,
            searching: true,
            ordering: true,
            lengthMenu: [5, 10, 25, 50, 100],
            pageLength: 10,
            language: {
                search: "Custom Search:",  // Customize search label
                lengthMenu: "Display _MENU_ records per page",
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                infoEmpty: "No entries to show",
                zeroRecords: "No matching records found"
            }
        });

    });

</script>





