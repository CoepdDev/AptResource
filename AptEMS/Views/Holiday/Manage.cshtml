@model AptEMS.Models.Holiday
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}



<h2>@(Model.HolidayId == 0 ? "Add Holiday" : "Edit Holiday")</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.HolidayName)
        @Html.TextBoxFor(m => m.HolidayName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.HolidayName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromDate)
        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.FromDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ToDate)
        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.ToDate, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-success">Create</button>

        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })

    </div>
}
